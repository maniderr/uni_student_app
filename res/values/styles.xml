<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">#0A66C2</item>
        <item name="colorPrimaryVariant">#084D9C</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color -->
        <item name="colorSecondary">#F8F8F8</item>
        <item name="colorSecondaryVariant">#E0E0E0</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background color -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>

        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>

        <!-- Customize other theme attributes as needed -->
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:itemBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="RegisterSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Header and selection colors -->
        <item name="colorPrimary">@color/date_picker_header</item>
        <item name="colorOnPrimary">@color/date_picker_header_text</item>
        <item name="colorAccent">@color/date_picker_selected</item>
        <item name="android:colorAccent">@color/date_picker_selected</item>

        <!-- Calendar text colors -->
        <item name="android:textColorPrimary">@color/date_picker_calendar_text</item>
        <item name="android:textColorSecondary">@color/date_picker_calendar_text</item>
        <item name="android:textColorTertiary">@color/date_picker_calendar_text</item>

        <!-- Selected date text color -->
        <item name="colorOnSurface">@color/date_picker_calendar_text</item>
        <item name="colorOnPrimarySurface">@color/date_picker_calendar_selected_text</item>
    </style>
    <style name="FilterButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">#0A66C2</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
